{
  "configTypeKey": "widget_contentItems",
  "title": "Documents",
  "connectableKey": "docs",
  "tabs": [
    {
      "title": "Vendor Management",
      "connectableKey": "vendormanagement",
      "data": {
        "configTypeKey": "dataProvider_sharePoint_list",
        "rowLimit": 30,
        "propertyMappings": "propertyMapper_sharePoint_list_document_simple",
        "absoluteWebUrl": "<YourTenantUrl>",
        "serverRelativeListUrl": "/Shared Documents/",
        "searchText": {
          "expression": "_mp.connectable.objects.docs_vendormanagement_search"
        },
        "filterExpression": {
          "expression": "(\"FileDirRef eq '/Shared Documents/Vendor Management'\")"
        },
        "connectableKey": "docs_vendormanagement_dataProvider"
      },
      "layoutTemplate": {
        "configTypeKey": "layoutTemplate_list",
        "columns": 4,
        "enableScrolling": true
      },
      "itemTemplate": {
        "configTypeKey": "itemTemplate_simple",
        "imageWidth": "2.5rem",
        "imageDisplayMode": "Round"
      },
      "showSearch": false,
      "showPreview": false,
      "actions": [
        {
          "configTypeKey": "widget_components_actionButton",
          "accentAction": false,
          "title": {
            "expression": "_mp.util.translate('viewAll')"
          },
          "action": {
            "expression": "window.open(_mp.connectable.objects.docs_vendormanagement_dataProvider.viewAllUrl.value + 'Vendor Management');"
          }
        }
      ]
    },
